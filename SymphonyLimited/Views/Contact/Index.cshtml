@using Data_DAL
@model IEnumerable<ContactUs>
@{
    ViewData["Title"] = "Contact";
    ViewData["NameBanner"] = "Contact";
    Layout = "~/Views/Shared/_LayoutBranch.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumbs">
                <ul class="flex flex-wrap align-items-center p-0 m-0">
                    <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
                    <li>Contact</li>
                </ul>
            </div><!-- .breadcrumbs -->
        </div><!-- .col -->
    </div><!-- .row -->

    <div class="row">
        <div class="col-12">
            <h3 class="text-center mb-4">Our Contact Information</h3>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Branch Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        foreach (var contact in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@contact.BranchName</td>
                                <td>@contact.Address</td>
                                <td>@contact.Phone</td>
                                <td>@contact.Email</td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No contact information available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div><!-- .col -->
    </div><!-- .row -->
</div><!-- .container -->





